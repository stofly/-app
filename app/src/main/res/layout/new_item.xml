<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_margin="15sp"
              android:layout_height="105dp"
              android:background="@drawable/mall_header_lin_bg2"
              android:orientation="vertical">


    <LinearLayout
            android:id="@+id/news_show"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/news_item_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_margin="8dp"
                android:layout_weight="8"
                android:text="把科创板建设好发展好"
                android:textColor="#000000"
                android:textSize="18sp" />
        <TextView
                android:id="@+id/news_item_author"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="2"
                android:text="午 言"
                android:textColor="#000000"
                android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/news_item_from"
                android:layout_width="0dp"
                android:layout_marginLeft="10sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="人民网－人民日报"

        />

        <TextView
                android:id="@+id/news_item_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_weight="3"
                android:text="2019年06月21日"
        />
    </LinearLayout>

</LinearLayout>