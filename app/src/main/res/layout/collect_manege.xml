<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:text="笔记本"
    />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="15sp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="left"
            android:text="选择题"
    />
    <TextView
            android:id="@+id/choose_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#66ffff"
            android:gravity="center"
            android:text="20道"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
    <Button
            android:id="@+id/choose_jump"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:gravity="right"
            android:background="@mipmap/jump"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
</RelativeLayout>

    <View  android:layout_height="1px"
           android:layout_width="match_parent"
           android:layout_marginLeft="15sp"
           android:layout_marginRight="15sp"
           android:background="#000000"
    />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15sp"
    >
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="left"
                android:text="多选题"
        />s
        <TextView
                android:id="@+id/chooses_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#66ffff"
                android:gravity="center"
                android:text="20道"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
        <Button
                android:id="@+id/chooses_jump"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:gravity="right"
                android:background="@mipmap/jump"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <View  android:layout_height="1px"
           android:layout_width="match_parent"
           android:layout_marginLeft="15sp"
           android:layout_marginRight="15sp"
           android:background="#000000"
    />
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15sp"
    >
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="left"
                android:text="判断题"
        />
        <TextView
                android:id="@+id/judg_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#66ffff"
                android:gravity="center"
                android:text="20道"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
        <Button
                android:id="@+id/judg_jump"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:gravity="right"
                android:background="@mipmap/jump"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <View  android:layout_height="1px"
           android:layout_width="match_parent"
           android:layout_marginLeft="15sp"
           android:layout_marginRight="15sp"
           android:background="#000000"
    />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15sp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="left"
                android:text="简答题"
        />
        <TextView
                android:id="@+id/tian_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#66ffff"
                android:gravity="center"
                android:text="20道"
                android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
        <Button
                android:id="@+id/tian_jump"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:gravity="right"
                android:background="@mipmap/jump"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View  android:layout_height="1px"
           android:layout_marginLeft="15sp"
           android:layout_marginRight="15sp"
           android:layout_width="match_parent"
           android:background="#000000"
    />

</LinearLayout>
