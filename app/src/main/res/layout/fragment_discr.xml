<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="考题"
            android:textSize="18sp"/>

    <Button
            android:id="@+id/_cb_option_ck"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/ck"
            android:layout_marginLeft="300sp"
    />

    <LinearLayout
            android:id="@+id/ll_chosses_case"
            android:layout_width="match_parent"
            android:layout_height="380sp"
            android:layout_margin="15sp"
            android:visibility="gone"
            android:background="@drawable/mall_header_lin_bg2"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/ig_andtrue"
                    android:layout_width="wrap_content"
                    android:layout_height="32sp"
                    android:layout_gravity="center"
                    android:background="@drawable/wx"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:layout_height="32sp"
                    android:text="【解析指导】"
            />
        </LinearLayout>
        <ScrollView
                android:id="@+id/weather_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:overScrollMode="never">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:id="@+id/tv_anlyze44"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="解析"
                />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>